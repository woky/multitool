#!/bin/bash
set -eu -o pipefail

proj_dir="$(realpath $(dirname $0))"

echo "### RUNNING UNIT TESTS ###"
pytest $proj_dir/multitool -vv

echo "### RUNNING FUNCTIONAL TESTS ###"
docker run \
	-v $proj_dir:/proj:ro \
	-v $proj_dir/tests/passwd:/etc/passwd:ro \
	-v $proj_dir/tests/group:/etc/group:ro \
	-w /proj/tests \
	python:3-slim ./runall
